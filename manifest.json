{
  "name": "Simbi PT",
  "version": "1.0",
  "manifest_version": 2,
  "author": "Carlos Arguello",
  "description": "Provides integration between Simbi's workflow and Pivotal Tracker.",
  "homepage_url": "https://github.com/cjarguello/simbi-labels-for-pivotal-tracker",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "*://www.pivotaltracker.com/*"
  ],
  "browser_action": {
    "default_title": "Simbi PT",
    "default_icon": "icons/icon16.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.pivotaltracker.com/*"
      ],
      "js": [
        "src/libraries/jquery.min.js",
        "src/inject.js",
        "src/content.js"
      ],
      "css": [
        "css/content.css"
      ]
    }
  ]
}
